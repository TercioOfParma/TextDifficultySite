@if(Loading)
{
    <div class="row">
        <RadzenText class="text-secondary" Text="Loading!"></RadzenText>
    </div>
}

@if(Complete)
{
    <div class="row">
        <RadzenText class="text-success" Text="Done!"></RadzenText>
    </div>
}

@if(Error)
{
    <div class="row">
        <RadzenText class="text-danger" Text="Error! Incorrect File format!"></RadzenText>
    </div>
}

@code 
{
    [Parameter]
    public bool Complete {get; set;}
    [Parameter]
    public bool Error {get; set;}
    [Parameter]
    public bool Loading {get; set;}
}