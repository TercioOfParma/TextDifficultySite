@using Radzen
@using Radzen.Blazor
@using MediatR
@using TextDifficultyDeterminer.Website.AddLanguage
@page "/AddLanguage"

@inherits AddLanguageBase

@inject NavigationManager NavigationManager;

@if(Language != null)
{
    <EditForm Model="Language" OnValidSubmit="Submit">
        
        <RadzenTextBox @bind-Value=Language.LanguageName />
        <RadzenButton ButtonType="ButtonType.Submit" Text="Submit" ButtonStyle="ButtonStyle.Primary"></RadzenButton>
    </EditForm>
}
<ErrorCheck Complete=@Complete Error=@Error Loading=@Loading></ErrorCheck>